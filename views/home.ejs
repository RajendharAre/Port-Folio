        { name: 'Node.js', icon: 'logos:nodejs', level: 75 },
        { name: 'Express', icon: 'simple-icons:express', level: 70 },
        { name: 'PostgreSQL', icon: 'logos:postgresql', level: 80 },
        { name: 'Tailwind', icon: 'logos:tailwindcss-icon', level: 75 },
        { name: 'Figma', icon: 'logos:figma', level: 75 },
        { name: 'React', icon: 'logos:react', level: 90 },
        { name: 'Git', icon: 'logos:git-icon', level: 95 },
        { name: 'Python', icon: 'logos:python', level: 60 },
