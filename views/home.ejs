        <div class="skill-card bg-light-card dark:bg-dark-card rounded-xl p-6 border border-light-border dark:border-dark-border transition-all duration-300 hover:border-light-accent/50 dark:hover:border-dark-accent/50 hover:shadow-lg hover:shadow-light-accent/10 dark:hover:shadow-dark-accent/10" data-aos="animate-[fadeInUp_0.5s_ease-out]" data-aos-delay="<%= (index % 4) * 100 %>">
