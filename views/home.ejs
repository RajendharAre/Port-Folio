<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= name %> | Portfolio</title>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-light-primary dark:bg-dark-primary min-h-screen text-light-text dark:text-dark-text transition-colors duration-300">
  <%- include('partials/header', { title: 'Rajendhar Are | Portfolio' }) %>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 z-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-light-accent/10 dark:bg-dark-accent/10 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-3xl animate-[pulse_8s_infinite]"></div>
      <div class="absolute bottom-1/3 right-1/3 w-96 h-96 bg-purple-500/10 dark:bg-purple-400/10 rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-3xl animate-[pulse_12s_infinite]"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <h1 class="text-4xl md:text-7xl font-bold leading-tight animate-[fadeIn_1s_ease-out]">
        Hi, I'm <span class="text-light-accent dark:text-dark-accent bg-gradient-to-r from-light-accent to-blue-500 dark:from-dark-accent dark:to-cyan-400 bg-clip-text text-transparent">Rajendhar Are</span>
      </h1>
      
      <h2 class="text-2xl md:text-4xl mt-4 max-w-2xl text-light-muted dark:text-dark-muted animate-[fadeIn_1.2s_ease-out]">
        <%= tagline %>
      </h2>
      
      <div class="mt-12 flex flex-wrap gap-4 animate-[fadeInUp_1.4s_ease-out]">
        <a href="#projects" 
           class="px-8 py-3 bg-light-accent dark:bg-dark-accent text-white rounded-lg hover:bg-light-hover dark:hover:bg-dark-hover transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-light-accent/20 dark:hover:shadow-dark-accent/20">
          View My Work
        </a>
        <a href="#contact" 
           class="px-8 py-3 border-2 border-light-accent dark:border-dark-accent text-light-accent dark:text-dark-accent rounded-lg hover:bg-light-accent/10 dark:hover:bg-dark-accent/10 transition-all duration-300 transform hover:-translate-y-1">
          Get In Touch
        </a>
      </div>
    </div>
    
    <!-- Animated scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M19 12l-7 7-7-7"></path>
      </svg>
    </div>
  </section>

  <!-- About Section -->
    <section id="about" class="py-20 bg-light-secondary dark:bg-dark-secondary">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16 animate-[fadeIn_0.8s_ease-out]">
        <h2 class="text-3xl font-bold text-light-text dark:text-dark-text mb-4">About Me</h2>
        <div class="w-20 h-1 bg-light-accent dark:bg-dark-accent mx-auto animate-[scaleX_1s_ease-out]"></div>
        </div>

        <div class="flex flex-col lg:flex-row items-center gap-12">
        <!-- Profile Image -->
        <div class="w-full lg:w-1/3 flex justify-center animate-[fadeInLeft_1s_ease-out]">
            <div class="relative w-64 h-64 md:w-80 md:h-80 rounded-2xl overflow-hidden border-4 border-light-accent/20 dark:border-dark-accent/20 shadow-xl hover:shadow-2xl transition-all duration-500 group">
            <img src="/assets/profile.jpg" alt="Your Name" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700">
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
        </div>

        <!-- Description & Info -->
        <div class="w-full lg:w-2/3 animate-[fadeInRight_1s_ease-out]">
            <!-- Description -->
            <div class="mb-8">
            <h3 class="text-xl font-semibold text-light-text dark:text-dark-text mb-4">Who I Am</h3>
            <p class="text-light-muted dark:text-dark-muted mb-4">
                I'm a passionate full-stack developer with expertise in modern web technologies. 
                With 3+ years of experience, I specialize in creating responsive, user-friendly 
                applications that solve real-world problems.
            </p>
            <p class="text-light-muted dark:text-dark-muted">
                When I'm not coding, you can find me contributing to open-source projects, 
                learning new frameworks, or exploring the latest in UI/UX design trends.
            </p>
            </div>

            <!-- Personal Info Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                <svg class="w-5 h-5 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                </div>
                <div>
                <h4 class="font-medium text-light-text dark:text-dark-text">Name</h4>
                <p class="text-light-muted dark:text-dark-muted">Your Full Name</p>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                <svg class="w-5 h-5 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                </div>
                <div>
                <h4 class="font-medium text-light-text dark:text-dark-text">Phone</h4>
                <p class="text-light-muted dark:text-dark-muted">+1 (123) 456-7890</p>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                <svg class="w-5 h-5 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                </div>
                <div>
                <h4 class="font-medium text-light-text dark:text-dark-text">Location</h4>
                <p class="text-light-muted dark:text-dark-muted">City, Country</p>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                <svg class="w-5 h-5 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                </div>
                <div>
                <h4 class="font-medium text-light-text dark:text-dark-text">Email</h4>
                <p class="text-light-muted dark:text-dark-muted">your.email@example.com</p>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                <svg class="w-5 h-5 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                </div>
                <div>
                <h4 class="font-medium text-light-text dark:text-dark-text">Education</h4>
                <p class="text-light-muted dark:text-dark-muted">B.Sc. Computer Science</p>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                <svg class="w-5 h-5 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                </div>
                <div>
                <h4 class="font-medium text-light-text dark:text-dark-text">University</h4>
                <p class="text-light-muted dark:text-dark-muted">University Name</p>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
    </section>

  <!-- Skills Section -->
  <section id="skills" class="py-20 bg-light-secondary dark:bg-dark-secondary">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 animate-[fadeIn_0.8s_ease-out]">
      <h2 class="text-3xl font-bold text-light-text dark:text-dark-text mb-4">My Technical Skills</h2>
      <div class="w-20 h-1 bg-light-accent dark:bg-dark-accent mx-auto animate-[scaleX_1s_ease-out]"></div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <% const skills = [
        { name: 'HTML5', icon: 'html5', level: 95 },
        { name: 'CSS3', icon: 'css3', level: 90 },
        { name: 'JavaScript', icon: 'javascript', level: 88 },
        { name: 'Node.js', icon: 'nodejs', level: 85 },
        { name: 'Express', icon: 'express', level: 83 },
        { name: 'PostgreSQL', icon: 'postgresql', level: 80 },
        { name: 'Tailwind', icon: 'tailwindcss', level: 92 },
        { name: 'Figma', icon: 'figma', level: 75 }
      ]; %>
      
      <% skills.forEach((skill, index) => { %>
        <div class="skill-card bg-light-card dark:bg-dark-card rounded-lg p-5 border border-light-border dark:border-dark-border transition-all duration-300 hover:border-light-accent/50 dark:hover:border-dark-accent/50 hover:shadow-lg hover:shadow-light-accent/10 dark:hover:shadow-dark-accent/10 animate-[fadeInUp_0.5s_ease-out]">
          <div class="flex justify-center mb-4">
            <div class="w-12 h-12 bg-light-secondary dark:bg-dark-secondary rounded-full flex items-center justify-center shadow-inner">
              <span class="text-light-accent dark:text-dark-accent font-mono text-xs"><%= skill.icon %></span>
            </div>
          </div>
          
          <h3 class="text-center font-medium mb-3"><%= skill.name %></h3>
          
          <div class="relative pt-1">
            <div class="overflow-hidden h-1.5 mb-4 rounded-full bg-light-border dark:bg-dark-border">
              <div class="skill-bar h-full bg-gradient-to-r from-light-accent to-blue-500 dark:from-dark-accent dark:to-cyan-400 rounded-full transition-all duration-1000 ease-out" 
                   style="width: 0%"
                   data-level="<%= skill.level %>">
              </div>
            </div>
            <span class="text-xs text-light-accent dark:text-dark-accent absolute top-0 right-0"><%= skill.level %>%</span>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20 bg-light-primary dark:bg-dark-primary">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16 animate-[fadeIn_0.8s_ease-out]">
        <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
        <p class="text-light-muted dark:text-dark-muted max-w-2xl mx-auto">Here are some of my proudest creations</p>
        <div class="w-20 h-1 bg-light-accent dark:bg-dark-accent mx-auto mt-4 animate-[scaleX_1s_ease-out]"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% if (typeof projects !== 'undefined') { %>
          <% projects.forEach((project, index) => { %>
            <div class="project-card bg-light-card dark:bg-dark-card rounded-xl overflow-hidden border border-light-border dark:border-dark-border hover:border-light-accent/30 dark:hover:border-dark-accent/30 transition-all duration-300 transform hover:-translate-y-2 shadow-md hover:shadow-lg animate-[fadeInUp_0.5s_ease-out]"
                 style="animation-delay: 0.2s">
              
              <div class="relative h-56 overflow-hidden group">
                <img src="<%= project.image_url %>" 
                     alt="<%= project.title %>" 
                     class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <a href="<%= project.live_url %>" target="_blank" class="mr-4 bg-white text-black px-4 py-2 rounded hover:bg-gray-100 transition">Live Demo</a>
                  <a href="<%= project.github_url %>" target="_blank" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition">Code</a>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex justify-between items-start">
                  <h3 class="text-xl font-bold"><%= project.title %></h3>
                </div>
                
                <p class="mt-3 text-light-muted dark:text-dark-muted text-sm"><%= project.description %></p>
                
                <div class="mt-4 flex flex-wrap gap-2">
                  <% project.technologies.forEach(tech => { %>
                    <span class="px-3 py-1 bg-light-accent/10 dark:bg-dark-accent/10 text-light-accent dark:text-dark-accent text-xs rounded-full">
                      <%= tech %>
                    </span>
                  <% }) %>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-red-500 col-span-3 text-center">No projects data loaded</p>
        <% } %>
      </div>
    </div>
  </section>
     
  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-light-secondary dark:bg-dark-secondary">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16 animate-[fadeIn_0.8s_ease-out]">
          <h2 class="text-3xl font-bold mb-4">Get In Touch</h2>
          <p class="text-light-muted dark:text-dark-muted max-w-2xl mx-auto">
            Have a project in mind or just want to connect?
          </p>
          <div class="w-20 h-1 bg-light-accent dark:bg-dark-accent mx-auto mt-4 animate-[scaleX_1s_ease-out]"></div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div class="animate-[fadeInLeft_1s_ease-out]">
            <h3 class="text-xl font-semibold mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                  <svg class="w-6 h-6 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium">Email Me</h4>
                  <a href="mailto:you@example.com" class="text-light-muted dark:text-dark-muted hover:text-light-accent dark:hover:text-dark-accent transition">you@example.com</a>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-light-accent/10 dark:bg-dark-accent/10 p-3 rounded-lg mr-4">
                  <svg class="w-6 h-6 text-light-accent dark:text-dark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium">Location</h4>
                  <p class="text-light-muted dark:text-dark-muted">Your City, Country</p>
                </div>
              </div>
            </div>
            
            <div class="mt-10">
              <h4 class="font-medium mb-4">Follow Me</h4>
              <div class="flex space-x-4">
                <a href="#" class="text-light-muted dark:text-dark-muted hover:text-light-accent dark:hover:text-dark-accent transition">
                  <span class="sr-only">GitHub</span>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                  </svg>
                </a>
                <a href="#" class="text-light-muted dark:text-dark-muted hover:text-light-accent dark:hover:text-dark-accent transition">
                  <span class="sr-only">LinkedIn</span>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <div class="animate-[fadeInRight_1s_ease-out]">
            <form id="contactForm" class="bg-light-card dark:bg-dark-card rounded-xl p-8 shadow-lg space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium mb-2">Full Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-light-primary dark:bg-dark-primary border border-light-border dark:border-dark-border rounded-lg focus:border-light-accent dark:focus:border-dark-accent focus:ring-2 focus:ring-light-accent/20 dark:focus:ring-dark-accent/20 outline-none transition placeholder-light-muted/50 dark:placeholder-dark-muted/50"
                  placeholder="John Doe">
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium mb-2">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-light-primary dark:bg-dark-primary border border-light-border dark:border-dark-border rounded-lg focus:border-light-accent dark:focus:border-dark-accent focus:ring-2 focus:ring-light-accent/20 dark:focus:ring-dark-accent/20 outline-none transition placeholder-light-muted/50 dark:placeholder-dark-muted/50"
                  placeholder="john@example.com">
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium mb-2">Your Message</label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-3 bg-light-primary dark:bg-dark-primary border border-light-border dark:border-dark-border rounded-lg focus:border-light-accent dark:focus:border-dark-accent focus:ring-2 focus:ring-light-accent/20 dark:focus:ring-dark-accent/20 outline-none transition placeholder-light-muted/50 dark:placeholder-dark-muted/50"
                  placeholder="Hello, I'd like to talk about..."></textarea>
              </div>
              
              <button 
                type="submit"
                class="w-full px-6 py-3 bg-light-accent dark:bg-dark-accent text-white rounded-lg hover:bg-light-hover dark:hover:bg-dark-hover transition-all duration-300 font-medium flex items-center justify-center shadow-md hover:shadow-lg">
                Send Message
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </button>
            </form>
            
            <div id="formMessage" class="mt-6 hidden p-4 rounded-lg text-sm"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <%- include('partials/footer') %>

  <!-- Animation Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
         const skillCards = document.querySelectorAll('.skill-card');
            skillCards.forEach((card, index) => {
            card.style.animationDelay = `${0.1 + (index * 0.1)}s`;
        });

        // Skill bars animation
        const animateSkillBars = () => {
            const skillBars = document.querySelectorAll('.skill-bar');
            
            skillBars.forEach(bar => {
                const targetWidth = bar.getAttribute('data-level');
                bar.style.width = `${targetWidth}%`;
                
                // Add transition effect
                bar.style.transition = 'width 1.5s ease-out';
            });
        };

        // Intersection Observer for skills section
        const skillsObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateSkillBars();
                    skillsObserver.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.2, // Trigger when 20% of the section is visible
            rootMargin: '0px 0px -50px 0px' // Adjust this to trigger animation earlier
        });
        // Observe the skills section
        const skillsSection = document.querySelector('#skills');
        if (skillsSection) {
            skillsObserver.observe(skillsSection);
        }

        // Form submission
        const contactForm = document.getElementById('contactForm');
        if (contactForm) {
            contactForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            });
        }
    });
  </script>

