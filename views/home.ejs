                <iconify-icon icon="<%= skill.icon %>" class="text-3xl text-light-text dark:text-dark-text"></iconify-icon>
              </div>
            </div>
            
            <h3 class="text-center font-medium mb-4 text-lg"><%= skill.name %></h3>
            
