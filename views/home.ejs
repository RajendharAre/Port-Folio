                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
                  </svg>
                </a>
                <a href="https://www.instagram.com/rajendharare33/" class="text-light-muted dark:text-dark-muted hover:text-light-accent dark:hover:text-dark-accent transition">
                  <span class="sr-only">Instagram</span>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5a4.25 4.25 0 0 0 4.25-4.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 1.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zm5.25-2a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <div data-aos="animate-[fadeInRight_1s_ease-out]">
            <form id="contactForm" class="bg-light-card dark:bg-dark-card rounded-xl p-8 shadow-lg space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium mb-2">Full Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-light-primary dark:bg-dark-primary border border-light-border dark:border-dark-border rounded-lg focus:border-light-accent dark:focus:border-dark-accent focus:ring-2 focus:ring-light-accent/20 dark:focus:ring-dark-accent/20 outline-none transition placeholder-light-muted/50 dark:placeholder-dark-muted/50"
                  placeholder="John Doe">
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium mb-2">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-light-primary dark:bg-dark-primary border border-light-border dark:border-dark-border rounded-lg focus:border-light-accent dark:focus:border-dark-accent focus:ring-2 focus:ring-light-accent/20 dark:focus:ring-dark-accent/20 outline-none transition placeholder-light-muted/50 dark:placeholder-dark-muted/50"
                  placeholder="john@example.com">
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium mb-2">Your Message</label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-3 bg-light-primary dark:bg-dark-primary border border-light-border dark:border-dark-border rounded-lg focus:border-light-accent dark:focus:border-dark-accent focus:ring-2 focus:ring-light-accent/20 dark:focus:ring-dark-accent/20 outline-none transition placeholder-light-muted/50 dark:placeholder-dark-muted/50"
                  placeholder="Hello, I'd like to talk about..."></textarea>
              </div>
              
              <button 
                type="submit"
                class="w-full px-6 py-3 bg-light-accent dark:bg-dark-accent text-white rounded-lg hover:bg-light-hover dark:hover:bg-dark-hover transition-all duration-300 font-medium flex items-center justify-center shadow-md hover:shadow-lg">
                Send Message
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </button>
            </form>
            
            <div id="formMessage" class="mt-6 hidden p-4 rounded-lg text-sm"></div>
          </div>
        </div>
      </div>
    </div>

    <script>
    document.getElementById('contactForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const form = e.target;
      const submitBtn = form.querySelector('button[type="submit"]');
      const messageDiv = document.getElementById('formMessage');
      
      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <span class="inline-block animate-spin mr-2">↻</span>
        Sending...
      `;

      try {
        const formData = new FormData(form);
        const response = await fetch('/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(Object.fromEntries(formData))
        });

        const result = await response.json();
        
        if (response.ok) {
          // Success message
          messageDiv.textContent = 'Message sent successfully!';
          messageDiv.className = 'mt-6 p-4 bg-green-100 text-green-800 rounded-lg text-sm';
          form.reset();
        } else {
          throw new Error(result.error || 'Failed to send');
        }
      } catch (error) {
        // Error message
        messageDiv.textContent = error.message || 'Failed to send message. Please email me directly.';
        messageDiv.className = 'mt-6 p-4 bg-red-100 text-red-800 rounded-lg text-sm';
      } finally {
        // Reset button
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Send Message <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>';
        
        // Show message
        messageDiv.classList.remove('hidden');
        
        // Hide after 5 seconds
        setTimeout(() => {
          messageDiv.classList.add('hidden');
        }, 5000);
      }
    });
    </script>

  </section>

